{
  "outputDirectory": "public",
  "rewrites": [
    { "source": "/auth/confirm", "destination": "/api/verify-email" },
    { "source": "/verify", "destination": "/api/verify-email" },
    { "source": "/", "destination": "/index.html" },
    { "source": "/auth/callback", "destination": "/index.html" }
  ],
  "functions": {
    "api/verify-email.js": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}